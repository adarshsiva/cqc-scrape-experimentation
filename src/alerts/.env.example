# CQC Alert Notification Service Environment Variables

# GCP Configuration
GCP_PROJECT=your-project-id
GCP_REGION=europe-west2

# BigQuery Configuration
BIGQUERY_DATASET=cqc_data

# Email Configuration
ENABLE_EMAIL_NOTIFICATIONS=true
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SENDER_EMAIL=cqc-alerts@your-domain.com
ALERT_RECIPIENTS=alerts@healthcare-org.com,cqc-team@healthcare-org.com
CC_RECIPIENTS=management@healthcare-org.com

# Webhook Configuration
ENABLE_WEBHOOK_NOTIFICATIONS=true
WEBHOOK_URL=https://your-webhook-endpoint.com/cqc-alerts
WEBHOOK_API_KEY=your-api-key

# Slack Configuration (Optional)
ENABLE_SLACK_NOTIFICATIONS=false
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#cqc-alerts

# Teams Configuration (Optional)
ENABLE_TEAMS_NOTIFICATIONS=false
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/YOUR/TEAMS/WEBHOOK

# Alert Thresholds
HIGH_RISK_THRESHOLD=70.0
CRITICAL_RISK_THRESHOLD=85.0

# Notification Settings
DRY_RUN=false
DEBUG_MODE=false