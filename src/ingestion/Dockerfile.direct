FROM python:3.9-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY requirements_fetcher.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements_fetcher.txt

# Copy source code
COPY cqc_direct_fetcher.py .

# Run the fetcher
CMD ["python", "cqc_direct_fetcher.py"]